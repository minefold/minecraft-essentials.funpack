# PermissionsBukkit configuration file
users:
  whatupdave:
    permissions:
      permissions.example: true
    groups:
    - admin
  minefold_guest:
    groups:
    - default
    - user
groups:
  admin:
    permissions:
      permissions.*: true
    inheritance:
    - user
<% if @pack_options['new_player_can_build'] %>
  default:
<% else %>
  builder:
<% end %>
    permissions:
      permissions.build: true
    worlds:
      creative:
        coolplugin.item: true
    inheritance:
    - default
<% unless @pack_options['new_player_can_build'] %>
  default:
    permissions:
      permissions.build: false
<% end %>

messages:
  build: '&cYou do not have permission to build here.'
debug: false
